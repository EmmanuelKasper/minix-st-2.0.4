# Makefile for make (!)

CC     = cc68
CFLAGS = -nostdinc -O2 -Dunix -D_MINIX -D_POSIX_SOURCE -I../../include

OBJ =	check.o input.o macro.o main.o make.o reader.o rules.o archive.o

all:	make

make :	$(OBJ)
	$(CC) -o make $(OBJ)
	install -S 96k make

install:	/usr/bin/make

/usr/bin/make:	make
	install -cs -o bin -g bin -m 555 make $@
 
$(OBJ): h.h

clean:
	rm -f *.o *.bak core

clobber:
	rm -f *.o *.bak core make

